extends ../../layouts/default.pug

block main
    .container
        .row
            .col-md-8.offset-md-2
                .card.mb-4
                    .card-body
                        if (user.avatar)
                            img(
                                src=user.avatar
                                class="rounded-circle float-end" 
                                style="width: 100px; height: 100px;"
                                alt="User  Avatar"
                            )

                        if(user.fullName)
                            p(class="card-text") Họ và Tên:  #{user.fullName}

                        if (user.status)
                            span(class="card-subtitle mb-2 text-muted") Trạng thái:
                            if (user.status === "active")
                                span(class="badge bg-success") Hoạt động
                            else
                                span(class="badge bg-danger") Dừng hoạt động

                        if (user.email)
                            div(class="mt-3")
                                p(class="card-text") Email: !{user.email}