extends ../../layouts/default.pug

block main
    h1(class="mb-4") Chỉnh sửa tài khoản

    form(
      action=`/${prefixAdmin}/userAccount/edit/${user.id}?_method=PATCH`
      method="POST"
      enctype="multipart/form-data"
    )
        // Full Name Input
        div(class="form-group")
            label(for="fullName") Họ tên *
            input(
                type="text"
                class="form-control"
                id="fullName"
                name="fullName"
                required
                value=user.fullName
                placeholder="Nhập họ tên"
            )

        // Email Input
        div(class="form-group")
            label(for="email") Email *
            input(
                type="email"
                class="form-control"
                id="email"
                name="email"
                required
                value=user.email
                placeholder="Nhập email"
            )

        // Password Input
        div(class="form-group")
            label(for="password") Mật khẩu
            input(
                type="password"
                class="form-control"
                id="password"
                name="password"
                placeholder="Nhập mật khẩu (để trống nếu không thay đổi)"
            )

        // Phone Input
        div(class="form-group")
            label(for="phone") Số điện thoại
            input(
                type="text"
                class="form-control"
                id="phone"
                name="phone"
                value=user.phone
                placeholder="Nhập số điện thoại"
            )

        // Avatar Upload
        div(
            class="form-group"
            upload-image
        )
            label(for="thumbnail") Ảnh
            input(
                type="file"
                class="form-control-file"
                id="thumbnail"
                name="thumbnail"
                accept="image/*"
                upload-image-input
            )
            img(
                src=""
                class="image-preview"
                upload-image-preview
            )

        // Status Radio Buttons
        div(class="form-group")
            label(class="mr-2") Trạng thái
            div(class="form-check form-check-inline")
                input(
                    type="radio"
                    class="form-check-input"
                    id="statusActive"
                    name="status"
                    value="active"
                    checked=(user.status == "active" ? true : false)
                )
                label(for="statusActive" class="form-check-label") Hoạt động

            div(class="form-check form-check-inline")
                input(
                    type="radio"
                    class="form-check-input"
                    id="statusInActive"
                    name="status"
                    value="inactive"
                    checked=(user.status == "inactive" ? true : false)
                )
                label(for="statusInActive" class="form-check-label") Dừng hoạt động

        // Submit Button
        div(class="form-group")
            button(
                type="submit"
                class="btn btn-primary"
            ) Cập nhật