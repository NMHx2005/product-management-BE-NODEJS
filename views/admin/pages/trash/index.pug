extends ../../layouts/default.pug
include ../../mixins/filter-status.pug
include ../../mixins/search.pug
include ../../mixins/pagination.pug
include ../../mixins/box-actions.pug

block main
    h1(class="mb-4") Thùng Rác


    .accordion(id="accordionExample")
        .card
            .card-header(id="headingOne")
                h2.mb-0
                    button.btn.btn-link.btn-block.text-left(
                        type="button" 
                        data-toggle="collapse" 
                        data-target="#collapseOne" 
                        aria-expanded="true" 
                        aria-controls="collapseOne"
                    ) Danh sách Sản Phẩm

            #collapseOne.collapse(
                aria-labelledby="headingOne" 
                data-parent="#accordionExample"
            )
                .card-body
                    .card.mb-3
                        .card-header Bộ lọc và Tìm kiếm 
                        .card-body
                            .row
                                .col-6
                                    +filterStatus(filterStatus)
                                .col-6  
                                    +search(keyword)
                    .card.mb-3
                        .card-header Hành động
                        .card-body
                            +box-actions(`/${prefixAdmin}/products/change-multi`, "Xóa Vĩnh Viễn", "Khôi Phục")

                    .card.mb-3
                        .card-header Danh sách Sản Phẩm
                        .card-body
                            table.table.table-hover.table-sm
                                thead
                                    tr
                                        th
                                            input(name="checkAll" type="checkbox")
                                        th STT
                                        th Hình ảnh
                                        th Tiêu đề
                                        th Giá
                                        th Trạng thái
                                        th Hành động

                                tbody
                                    each item, index in products
                                        tr 
                                            td
                                                input(
                                                    name="checkItem" 
                                                    type="checkbox"
                                                    value=item.id
                                                )
                                            td #{index + 1}
                                            td
                                                img(
                                                    src=item.thumbnail
                                                    alt=item.title
                                                    width="80px"
                                                    height="auto"
                                                )
                                            td #{item.title}
                                            td #{item.price}$
                                            td
                                                if(item.status === "active")
                                                    button(
                                                        link=`/${prefixAdmin}/products/change-status/inactive/${item.id}` 
                                                        class="badge badge-success"
                                                        button-change-status
                                                    ) Hoạt động 
                                                else 
                                                    button(
                                                        link=`/${prefixAdmin}/products/change-status/active/${item.id}` 
                                                        class="badge badge-danger"
                                                        button-change-status
                                                    ) Dừng hoạt động
                                            td
                                                button(
                                                    class="btn btn-warning btn-sm" 
                                                    restore=`/${prefixAdmin}/trash/restoreItem/${item.id}`
                                                ) Khôi Phục
                                                button(
                                                    class="btn btn-danger btn-sm ml-1"
                                                    button-deleted=`/${prefixAdmin}/trash/deleteItem/${item.id}`
                                                ) Xóa
                    div(class="footer-content")
                        +pagination(pagination)

        .card
            .card-header(id="headingTwo")
                h2.mb-0
                    button.btn.btn-link.btn-block.text-left.collapsed(
                        type="button" 
                        data-toggle="collapse" 
                        data-target="#collapseTwo" 
                        aria-expanded="false" 
                        aria-controls="collapseTwo"
                    ) Danh Mục Sản Phẩm

            #collapseTwo.collapse(
                aria-labelledby="headingTwo" 
                data-parent="#accordionExample"
            )
                .card-body
                    .card.mb-3
                        .card-header Bộ lọc và Tìm kiếm 
                        .card-body
                            .row
                                .col-6
                                    +filterStatus(filterStatus)
                                .col-6
                                    +search(keyword)
                    .card.mb-3
                        .card-header Hành động
                        .card-body
                            +box-actions(`/${prefixAdmin}/products/change-multi`, "Xóa Vĩnh Viễn", "Khôi Phục")

                    .card.mb-3
                        .card-header Danh Mục Sản Phẩm
                        .card-body
                            table.table.table-hover.table-sm
                                thead
                                    tr
                                        th
                                            input(name="checkAll" type="checkbox")
                                        th STT
                                        th Hình ảnh
                                        th Tiêu đề
                                        th Trạng thái
                                        th Hành động

                                tbody
                                    each item, index in productCategory
                                        tr 
                                            td
                                                input(
                                                    name="checkItem" 
                                                    type="checkbox"
                                                    value=item.id
                                                )
                                            td #{index + 1}
                                            td
                                                img(
                                                    src=item.thumbnail
                                                    alt=item.title
                                                    width="80px"
                                                    height="auto"
                                                )
                                            td #{item.title}
                                            td
                                                if(item.status === "active")
                                                    button(
                                                        link=`/${prefixAdmin}/products-category/change-status/inactive/${item.id}` 
                                                        class="badge badge-success"
                                                        button-change-status
                                                    ) Hoạt động 
                                                else 
                                                    button(
                                                        link=`/${prefixAdmin}/products-category/change-status/active/${item.id}` 
                                                        class="badge badge-danger"
                                                        button-change-status
                                                    ) Dừng hoạt động
                                            td
                                                button(
                                                    class="btn btn-warning btn-sm" 
                                                    restore=`/${prefixAdmin}/trash/restoreItem/${item.id}`
                                                ) Khôi Phục
                                                button(
                                                    class="btn btn-danger btn-sm ml-1"
                                                    button-deleted=`/${prefixAdmin}/trash/deleteItem/${item.id}`
                                                ) Xóa
                    div(class="footer-content")
                        +pagination(paginationTrash)


        .card
            .card-header(id="headingThree")
                h2.mb-0
                    button.btn.btn-link.btn-block.text-left.collapsed(
                        type="button" 
                        data-toggle="collapse" 
                        data-target="#collapseThree" 
                        aria-expanded="false" 
                        aria-controls="collapseThree"
                    ) Danh Sách Tài Khoản

            #collapseThree.collapse(
                aria-labelledby="headingThree" 
                data-parent="#accordionExample"
            )
                .card-body
                    | And lastly, the placeholder content for the third and final accordion panel. This panel is hidden by default.


    script(src="/admin/js/script.trash.js")
