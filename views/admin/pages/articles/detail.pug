extends ../../layouts/default.pug

block main
  if(role.permissions.includes("articles_view"))
    h1(class="mb-4") #{article.title}

    div(class="card mb-4")
      img(class="card-img-top" src=article.thumbnail alt=article.title)
      div(class="card-body")
        p(class="card-text") !{article.content}
        p(class="card-text")
          small(class="text-muted") Vị trí: #{article.position}
        p(class="card-text")
          small(class="text-muted")
          if article.status == "active"
            span(class="badge badge-success") Hoạt động
          else
            span(class="badge badge-danger") Ngừng hoạt động

    a(href=`/${prefixAdmin}/articles` class="btn btn-primary") Quay lại danh sách
